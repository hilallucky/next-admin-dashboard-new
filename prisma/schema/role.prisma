model Role {
    id          Int       @id @default(autoincrement())
    uid         String    @unique @default(cuid())
    name        String
    description String?
    status      Int       @default(0)
    createdBy   Int?
    createdAt   DateTime  @default(now())
    updatedBy   Int?
    updatedAt   DateTime? @updatedAt
    deletedBy   Int?
    deletedAt   DateTime?

    users User[]

    @@map("roles")
}
